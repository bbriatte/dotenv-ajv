{
  "include": [
    "lib"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "dist",
    "lib": ["ES2018"],
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ]
}
